@{
}

@model my_app.Models.Entities.Student

<h1>Edit Student</h1>

@if (Model is null)
{
    <p>NOT STUDENT WAS FOUND IN THIS ID</p>
}

else 
{
    <form method="post">

        <div class="mt-3">
            <label class="form-lable">ID</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>


        <div class="mt-3">
            <label class="form-lable">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>


        <div class="mt-3">
            <label class="form-lable">Email</label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label class="form-lable">Phone</label>
            <input type="text" class="form-control" asp-for="Phone" />
        </div>

        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Subcribed" asp-for="Subcribed" />
            <label class="form-check-label" for="Subcribed">Subcribed</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Student">Delete</button>
        </div>



    </form>
}